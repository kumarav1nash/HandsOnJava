# Admin Module Environment Configuration
# Copy this file to .env.production and update with your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret - Generate a strong random key (256-bit minimum)
# Command: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-256-bit-jwt-secret-key-here-change-this-in-production

# Session Secret - Generate a different strong random key
# Command: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-256-bit-session-secret-key-here-change-this-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL (optional - defaults to in-memory storage)
DATABASE_URL=postgresql://username:password@localhost:5432/admin_db

# Redis URL for session storage (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Upload directory path
UPLOAD_DIR=/var/uploads/admin

# Maximum file size in bytes (10MB default)
MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# =============================================================================
# AUDIT LOGGING CONFIGURATION
# =============================================================================

# Audit log file path
AUDIT_LOG_PATH=/var/log/admin/audit.log

# Enable audit logging (true/false)
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins (comma-separated)
CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# General rate limit window in milliseconds (15 minutes default)
RATE_LIMIT_WINDOW=900000

# Maximum requests per window for general endpoints
RATE_LIMIT_MAX=100

# Maximum login attempts per window for authentication endpoints
AUTH_RATE_LIMIT_MAX=5

# API rate limit window in milliseconds (1 minute default)
API_RATE_LIMIT_WINDOW=60000

# Maximum API requests per minute
API_RATE_LIMIT_MAX=60

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL certificate path (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt

# SSL private key path
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP Host
SMTP_HOST=smtp.gmail.com

# SMTP Port
SMTP_PORT=587

# SMTP User
SMTP_USER=your-email@gmail.com

# SMTP Password
SMTP_PASS=your-app-specific-password

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# New Relic License Key
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================

# Backup directory path
BACKUP_DIR=/var/backups/admin

# Backup retention period in days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# ADMIN ACCOUNT CONFIGURATION
# =============================================================================

# Default admin email (change this)
DEFAULT_ADMIN_EMAIL=admin@yourdomain.com

# Default admin password (change this)
DEFAULT_ADMIN_PASSWORD=YourSecurePassword123!

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Node.js memory limit in MB
NODE_OPTIONS=--max-old-space-size=4096

# PM2 memory restart threshold
PM2_MAX_MEMORY_RESTART=2G

# Cluster mode instances (0 = max CPU cores)
PM2_INSTANCES=max

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable user registration (true/false)
ENABLE_USER_REGISTRATION=false

# Enable file uploads (true/false)
ENABLE_FILE_UPLOADS=true

# Enable audit logging (true/false)
ENABLE_AUDIT_LOGGING=true

# Enable rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# =============================================================================
# SECURITY FEATURES
# =============================================================================

# Enable CSRF protection (true/false)
ENABLE_CSRF_PROTECTION=true

# Enable security headers (true/false)
ENABLE_SECURITY_HEADERS=true

# Enable input validation (true/false)
ENABLE_INPUT_VALIDATION=true

# Enable suspicious activity detection (true/false)
ENABLE_SUSPICIOUS_ACTIVITY_DETECTION=true

# =============================================================================
# DEVELOPMENT OVERRIDES (Use with caution)
# =============================================================================

# Disable security features for development (true/false)
# WARNING: Only use in development environments!
DISABLE_SECURITY=false

# Enable detailed error messages (true/false)
ENABLE_DETAILED_ERRORS=false

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true